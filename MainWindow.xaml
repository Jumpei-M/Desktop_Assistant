<Window x:Class="desktop_assistant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="HalfMoon"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent" Topmost="True"
        ShowInTaskbar="False">
    <Window.Resources>
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="#444"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="MinWidth" Value="50"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Canvas>
        <Border x:Name="ExpandPanel"
        Width="40" Height="100"
        CornerRadius="50"
        Canvas.Left="0" Canvas.Top="150">
            <Border.Background>
                <RadialGradientBrush>
                    <GradientStop Color="#8083CEF5" Offset="0"/>
                    <GradientStop Color="#80A9A9A9" Offset="1"/>
                    <GradientStop Color="#80676767" Offset="0.817"/>
                </RadialGradientBrush>
            </Border.Background>

            <!-- 展開時の中身 -->
            <Grid>
                <Button x:Name="PinButton"
                    Content="📌"
                    Width="24" Height="24"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="10"
                    Visibility="Collapsed"
                    Click="PinButton_Click"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="White"/>
                
                <!-- ページ切り替えボタン -->
                <StackPanel x:Name="PageButtonsPanel"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,10,0,0"
                    Visibility="Collapsed"/>

                <!-- ページ表示領域 -->
                <ContentControl x:Name="PageContainer"
                        Margin="0,40,0,0"
                        Visibility="Collapsed"/>
            </Grid>
        </Border>
    </Canvas>
</Window>
